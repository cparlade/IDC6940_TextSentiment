{
  "name": "Quarto + Python",
  "image": "ghcr.io/quarto-dev/quarto:latest",
  "features": {
    "ghcr.io/devcontainers/features/python:1": { "version": "3.10" }
  },
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && pip install -r requirements.txt || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      }
    }
  }
}
